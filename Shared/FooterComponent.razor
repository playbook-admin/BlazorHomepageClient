@namespace BlazorClient.Shared
@inject IJSRuntime JSRuntime

<footer>
    <div class="navbar navbar-expand-lg navbar-light bg-light" style="@footerStyle">
        <div class="text-center p-3">
            © 2024 - Blazor Homepage Ltd. Footer
        </div>
    </div>
</footer>

@code {
    private string footerStyle = "";
    private string spriteType = "Footer"; 

    protected override async Task OnInitializedAsync()
    {
        // Call JavaScript function to get the dynamic style with spriteType parameter
        footerStyle = await JSRuntime.InvokeAsync<string>("getDynamicStyle", spriteType);
    }
}
